<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Servo1"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edit_servo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7" >

                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/btn_servo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send command" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/servo1_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Servo2"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edit_servo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7" >
                </EditText>

                <Button
                    android:id="@+id/btn_servo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send command" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/servo1_bar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#fccece"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="RGB LED - RED"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edit_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7" >
                </EditText>

                <Button
                    android:id="@+id/btn_red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send command" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#d8ffd4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="RGB LED  - GREEN"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edit_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7" >
                </EditText>

                <Button
                    android:id="@+id/btn_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send command" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#d4eaff"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="RGB LED  - BLUE"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/edit_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="7" >
                </EditText>

                <Button
                    android:id="@+id/btn_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send command" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_connection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Connect to SmartLamp" />
    </LinearLayout>

</FrameLayout>